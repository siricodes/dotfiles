#!/bin/sh

[[ -f $XDG_CONFIG_HOME/xresources ]] && xrdb -merge $XDG_CONFIG_HOME/xresources	# load xresources
picom &			# picom for transparency
sxhkd -r /dev/null &	# sxhkd
wallpaper		# set wallpaper
xset r rate 300 50 &	# Speed xrate up

# This is the list for lf icons:
export LF_ICONS="di=📁:\
